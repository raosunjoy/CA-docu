{
  "name": "zetra-platform",
  "version": "1.0.0",
  "description": "Unified Productivity Platform for Indian CA Firms",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "lint": "node --max-old-space-size=4096 node_modules/.bin/eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "node --max-old-space-size=4096 node_modules/.bin/eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "node --max-old-space-size=4096 node_modules/.bin/jest --runInBand",
    "test:watch": "node --max-old-space-size=4096 node_modules/.bin/jest --watch --runInBand",
    "test:coverage": "node --max-old-space-size=4096 node_modules/.bin/jest --coverage --runInBand",
    "test:e2e": "playwright test",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "analyze": "ANALYZE=true npm run build",
    "lighthouse": "lhci autorun",
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "zetra:start": "./start-zetra.sh",
    "zetra:stop": "./stop-zetra.sh",
    "zetra:status": "./start-zetra.sh --status",
    "zetra:dev": "./start-zetra.sh --dev",
    "zetra:prod": "./start-zetra.sh --production",
    "zetra:full": "./start-zetra.sh --with-redis --with-elasticsearch --with-prisma-studio"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
