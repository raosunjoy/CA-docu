  "shortcuts": [
    {
      "name": "Tasks",
      "short_name": "Tasks",
      "description": "View and manage tasks",
      "url": "/tasks",
      "icons": [
        {
          "src": "/icons/shortcut-tasks.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Documents",
      "short_name": "Documents",
      "description": "Access documents",
      "url": "/documents",
      "icons": [
        {
          "src": "/icons/shortcut-documents.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View dashboard",
      "url": "/dashboard",
